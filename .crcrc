### rbenv
###################################################

# based on:
# eval "$(rbenv init -)"
if [ -f $HOME/.rbenv ]; then
    prepend_path PATH $HOME/.rbenv/shims
    source "/usr/lib/rbenv/libexec/../completions/rbenv.bash"
    rbenv rehash 2>/dev/null
    rbenv() {
      command="$1"
      if [ "$#" -gt 0 ]; then
        shift
      fi

      case "$command" in
      shell)
        eval `rbenv "sh-$command" "$@"`;;
      *)
        command rbenv "$command" "$@";;
      esac
    }
fi

