# Inspired by https://theptrk.com/2018/07/11/did-txt-file/
did () {
  mkdir -p ~/Documents/did
  if [ -n "$*" ]; then
    # TODO figure out how to escape $*
    touch ~/Documents/did/"$*"
  fi
  find ~/Documents/did -type f -printf "%TY-%Tm-%Td %TH:%TM\t%P\n" | sort -nr | head -n 10
}

